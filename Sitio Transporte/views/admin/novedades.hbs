<div class="container" style="magin-top:50px">
    <div class="row">
        <div class="col">
            <p class="text-right">Hola, {{usuario}}! <a href="/admin/login/logout" class="btn btn-sm btn-danger">Cerrar sesión <i class="fa fa-sign-out" aria-hidden="true"></i></a></p>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <h3>Listado de Novedades</h3>
        </div>
        <div class="col-2">
           <a href="/admin/novedades/nuevo" class="btn btn-success"><i class="fa fa-plus" aria-hidden="true"></i> Nuevo</a>
        </div>
        <div class="col-4">
             <form class="form-inline" action="/admin/novedades" method="get">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="q" {{#if q}} value="{{q}}" {{/if}}><!--ese último if es para que quede la palabra en el buscador-->
            <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button><!--o reemplazar Search por ícono lupa-->
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                    <th scope="col">#</th>
                    <th scope="col">Título</th>
                    <th class="text-center" scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{ id }} </th>
                        <td>{{titulo}}</td>
                        <td class="text-center"><a title="Editar" href="/admin/novedades/modificar/{{id}}" class="btn btn-secondary"> <i class="fa fa-pencil" aria-hidden="true"></i> </a><a title="Eliminar" href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary"> <i class="fa fa-trash" aria-hidden="true"></i> </a></td>
                    </tr>
                    {{/each}}
                </tbody>
                </table>
                {{#if is_search}}
                {{#unless novedades.length}}<!--si no hay resultados para novedades.length mostrar tal cosa. qué era eso de length?-->
                <p>No se encontraron resultados para "<b>{{q}}</b>"</p>
                {{/unless}}
                {{/if}}
        </div>
    </div>

</div>