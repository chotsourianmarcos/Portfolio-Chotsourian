<h4>Modificar Novedades</h4>
        <div class="evento">
            <form action="/admin/novedades/modificar" method="post">
            <input type="hidden" value="{{novedades.id}}" name="id">
                <div>
                <input type="text" name="titulo" value="{{novedades.titulo}} ">
                </div>
                <div>
                <input type="text" name="subtitulo" value="{{novedades.subtitulo}}">
                </div>
                <div>
                <textarea type="text" name="cuerpo">{{novedades.subtitulo}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
            {{#if error}}
                 <p>{{mensaje}}</p>
            {{/if}}
        </div>